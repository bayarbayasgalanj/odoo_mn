<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
	<!-- CRM discount-->
    <record id="view_crm_discount_form" model="ir.ui.view">
        <field name="name">crm.discount.form</field>
        <field name="model">crm.discount</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group col="6">
                        <field name="partner_id" domain="[('is_discount', '=', True)]"/>
                        <field name="datetime"/>
                        <field name="sale_count"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_crm_discount_tree" model="ir.ui.view">
        <field name="name">crm.discount.tree</field>
        <field name="model">crm.discount</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id"/>
                <field name="datetime"/>
                <field name="sale_count"/>
            </tree>
        </field>
    </record>
